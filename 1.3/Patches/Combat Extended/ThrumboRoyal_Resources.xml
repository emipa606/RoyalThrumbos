<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Thrumbofur -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="RoyalThrumbo_Leather"]/statBases/StuffPower_Armor_Sharp</xpath>
          <value>
            <StuffPower_Armor_Sharp>0.95</StuffPower_Armor_Sharp>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="RoyalThrumbo_Leather"]/statBases/StuffPower_Armor_Blunt</xpath>
          <value>
            <StuffPower_Armor_Blunt>0.25</StuffPower_Armor_Blunt>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
